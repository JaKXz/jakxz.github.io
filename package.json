{
	"name": "jason-kurian-portfolio",
	"private": true,
	"scripts": {
		"build": "vite build",
		"predeploy": "pnpm dedupe && test -z \"$(git status --porcelain)\" && pnpm run build",
		"deploy": "gh-pages -d build -b main --dotfiles --nojekyll --cname \"jasonkurian.dev\" --tag $(git rev-parse --short HEAD)",
		"dev": "vite dev",
		"lint": "eslint --ignore-path .gitignore .",
		"preview": "vite preview",
		"test": "vitest"
	},
	"devDependencies": {
		"@iconify-json/radix-icons": "1.2.4",
		"@sveltejs/adapter-static": "3.0.9",
		"@sveltejs/kit": "2.27.3",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@unocss/eslint-config": "66.4.2",
		"@unocss/extractor-svelte": "66.4.2",
		"@unocss/transformer-directives": "66.4.2",
		"clsx": "^2.1.1",
		"eslint": "8.57.1",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-svelte": "2.46.1",
		"gh-pages": "6.3.0",
		"mdsvex": "0.12.6",
		"prettier": "3.6.2",
		"prettier-plugin-svelte": "3.4.0",
		"pretty-quick": "^4.0.0",
		"rehype-autolink-headings": "7.1.0",
		"rehype-external-links": "3.0.0",
		"rehype-slug": "6.0.0",
		"sass": "1.90.0",
		"simple-git-hooks": "^2.11.1",
		"svelte": "5.38.1",
		"tailwind-merge": "^3.0.1",
		"unocss": "66.4.2",
		"vite": "7.1.2",
		"vitest": "3.2.4"
	},
	"simple-git-hooks": {
		"pre-commit": "npx pretty-quick --staged"
	},
	"type": "module",
	"dependencies": {
		"dotenv": "17.2.1",
		"just-throttle": "4.2.0",
		"svelte-preprocess": "6.0.3"
	}
}
