{
	"name": "jason-kurian-portfolio",
	"private": true,
	"scripts": {
		"build": "vite build",
		"predeploy": "pnpm dedupe && test -z \"$(git status --porcelain)\" && pnpm run build",
		"deploy": "gh-pages -d build -b main --dotfiles --nojekyll --cname \"jasonkurian.dev\" --tag $(git rev-parse --short HEAD)",
		"dev": "vite dev",
		"lint": "eslint --ignore-path .gitignore .",
		"preview": "vite preview",
		"test": "vitest"
	},
	"devDependencies": {
		"@iconify-json/radix-icons": "1.2.2",
		"@sveltejs/adapter-static": "3.0.8",
		"@sveltejs/kit": "2.20.3",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@unocss/eslint-config": "65.5.0",
		"@unocss/extractor-svelte": "65.5.0",
		"@unocss/transformer-directives": "65.5.0",
		"clsx": "^2.1.1",
		"eslint": "8.57.1",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-svelte": "2.46.1",
		"gh-pages": "6.3.0",
		"mdsvex": "0.12.3",
		"prettier": "3.5.3",
		"prettier-plugin-svelte": "3.3.3",
		"pretty-quick": "^4.0.0",
		"rehype-autolink-headings": "7.1.0",
		"rehype-external-links": "3.0.0",
		"rehype-slug": "6.0.0",
		"sass": "1.86.2",
		"simple-git-hooks": "^2.11.1",
		"svelte": "5.25.6",
		"tailwind-merge": "^3.0.1",
		"unocss": "65.5.0",
		"vite": "6.2.4",
		"vitest": "3.1.1"
	},
	"simple-git-hooks": {
		"pre-commit": "npx pretty-quick --staged"
	},
	"type": "module",
	"dependencies": {
		"dotenv": "16.4.7",
		"just-throttle": "4.2.0",
		"svelte-preprocess": "6.0.3"
	}
}
